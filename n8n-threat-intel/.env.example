# Example environment variables file
# Copy this to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=threat_intel
DB_USERNAME=threat_intel_app
DB_PASSWORD=your_secure_database_password

# Database SSL Configuration (optional)
DB_SSL_ENABLED=true
DB_SSL_REJECT_UNAUTHORIZED=true

# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_admin_password

# Webhook Configuration
N8N_WEBHOOK_URL=https://your-domain.com/webhook
API_KEY=your-webhook-api-key
WEBHOOK_SECRET=your-webhook-secret

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=your-organization-id
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# VirusTotal Configuration
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# AbuseIPDB Configuration
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CHANNEL=#threat-alerts

# SMTP Configuration
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=threat-intel@company.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=threat-intel@company.com
SECURITY_TEAM_EMAIL=security-team@company.com

# IMAP Configuration
IMAP_HOST=imap.company.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=threat-intel@company.com
IMAP_PASSWORD=your-imap-password
IMAP_MAILBOX=INBOX
IMAP_POLL_INTERVAL=300

# Security Configuration
IP_WHITELIST_ENABLED=false
IP_WHITELIST=127.0.0.1,10.0.0.0/8,192.168.0.0/16

# Monitoring Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=console
LOG_FILE_PATH=/var/log/threat-intel.log

# Grafana Configuration
GRAFANA_PASSWORD=secure_grafana_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Integration Configuration
SIEM_INTEGRATION_ENABLED=false
SIEM_TYPE=splunk
SIEM_ENDPOINT=https://your-siem-instance.com
SIEM_TOKEN=your-siem-token
SIEM_INDEX=threat_intel

# Performance Configuration
MAX_CONCURRENT_EXECUTIONS=5
QUEUE_LIMIT=100

# Prometheus Configuration (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090