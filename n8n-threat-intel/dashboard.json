{
  "dashboard": {
    "id": null,
    "title": "Threat Intelligence Dashboard",
    "tags": ["threat-intelligence", "security", "n8n"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 0,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Threat Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "SELECT COUNT(*) as value, 'Total Threats Today' as metric FROM threat_intel WHERE DATE(timestamp) = CURRENT_DATE",
            "legendFormat": "Total Threats",
            "refId": "A"
          },
          {
            "expr": "SELECT COUNT(*) as value, 'Critical Threats' as metric FROM threat_intel WHERE alert_level = 'critical' AND timestamp >= NOW() - INTERVAL '24 hours'",
            "legendFormat": "Critical",
            "refId": "B"
          },
          {
            "expr": "SELECT COUNT(*) as value, 'High Threats' as metric FROM threat_intel WHERE alert_level = 'high' AND timestamp >= NOW() - INTERVAL '24 hours'",
            "legendFormat": "High",
            "refId": "C"
          },
          {
            "expr": "SELECT AVG(threat_score) as value, 'Avg Threat Score' as metric FROM threat_intel WHERE timestamp >= NOW() - INTERVAL '24 hours'",
            "legendFormat": "Avg Score",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 40
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Threat Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "SELECT timestamp, threat_score, alert_level, source FROM threat_intel WHERE timestamp >= $__timeFrom() AND timestamp <= $__timeTo() ORDER BY timestamp",
            "legendFormat": "{{alert_level}} - {{source}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 20,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "always",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          }
        },
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 3,
        "title": "Alert Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "SELECT alert_level, COUNT(*) as count FROM threat_intel WHERE timestamp >= $__timeFrom() GROUP BY alert_level",
            "legendFormat": "{{alert_level}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "mappings": [],
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "critical"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "red",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "high"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "orange",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "medium"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "yellow",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "low"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "blue",
                    "mode": "fixed"
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "list",
            "placement": "right"
          }
        },
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Top IOCs by Threat Score",
        "type": "table",
        "targets": [
          {
            "expr": "SELECT ioc_value, ioc_type, hit_count, reputation_score, associated_threats FROM v_ioc_intelligence ORDER BY reputation_score DESC, hit_count DESC LIMIT 20",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "reputation_score"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                },
                {
                  "id": "max",
                  "value": 100
                },
                {
                  "id": "min",
                  "value": 0
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "reputation_score"
            }
          ]
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 17
        }
      },
      {
        "id": 5,
        "title": "Source Analysis",
        "type": "bargauge",
        "targets": [
          {
            "expr": "SELECT source, COUNT(*) as count, AVG(threat_score) as avg_score FROM threat_intel WHERE timestamp >= $__timeFrom() GROUP BY source ORDER BY count DESC",
            "legendFormat": "{{source}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "continuous-GrYlRd"
            },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "displayMode": "list",
              "orientation": "horizontal"
            },
            "mappings": [],
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 40
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "text": {},
          "showUnfilled": true
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 25
        }
      },
      {
        "id": 6,
        "title": "System Health Metrics",
        "type": "stat",
        "targets": [
          {
            "expr": "SELECT * FROM v_system_health",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 25
        }
      },
      {
        "id": 7,
        "title": "Alert Response Times",
        "type": "timeseries",
        "targets": [
          {
            "expr": "SELECT sent_at, EXTRACT(EPOCH FROM (sent_at - created_at)) as response_time_seconds, alert_type FROM alert_history WHERE sent_at >= $__timeFrom() AND status = 'delivered'",
            "legendFormat": "{{alert_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Response Time (seconds)",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 20,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "s"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 33
        }
      },
      {
        "id": 8,
        "title": "Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "SELECT created_at, COUNT(*) as error_count, severity FROM error_log WHERE created_at >= $__timeFrom() GROUP BY created_at, severity ORDER BY created_at",
            "legendFormat": "{{severity}} errors",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Error Count",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "bars",
              "fillOpacity": 80,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "normal"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 33
        }
      },
      {
        "id": 9,
        "title": "Recent High Priority Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "SELECT timestamp, source, alert_level, threat_score, CASE WHEN jsonb_array_length(iocs->'ips') > 0 THEN (iocs->>'ips')::text ELSE '' END as ips, CASE WHEN jsonb_array_length(iocs->'domains') > 0 THEN (iocs->>'domains')::text ELSE '' END as domains FROM threat_intel WHERE alert_level IN ('critical', 'high') AND timestamp >= NOW() - INTERVAL '24 hours' ORDER BY timestamp DESC LIMIT 10",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [
              {
                "options": {
                  "critical": {
                    "color": "red",
                    "index": 0
                  },
                  "high": {
                    "color": "orange",
                    "index": 1
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "alert_level"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "threat_score"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                },
                {
                  "id": "max",
                  "value": 100
                },
                {
                  "id": "min",
                  "value": 0
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "timestamp"
            }
          ]
        },
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 41
        }
      },
      {
        "id": 10,
        "title": "API Rate Limit Status",
        "type": "stat",
        "targets": [
          {
            "expr": "SELECT service_name, requests_made, requests_limit, ROUND((requests_made::float / requests_limit::float) * 100, 2) as usage_percent FROM api_rate_limits WHERE reset_time >= NOW()",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 51
        }
      }
    ],
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": "PostgreSQL",
          "definition": "SELECT DISTINCT source FROM threat_intel ORDER BY source",
          "hide": 0,
          "includeAll": true,
          "label": "Source",
          "multi": true,
          "name": "source",
          "options": [],
          "query": "SELECT DISTINCT source FROM threat_intel ORDER BY source",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "type": "query"
        },
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": "PostgreSQL",
          "definition": "SELECT DISTINCT alert_level FROM threat_intel ORDER BY alert_level",
          "hide": 0,
          "includeAll": true,
          "label": "Alert Level",
          "multi": true,
          "name": "alert_level",
          "options": [],
          "query": "SELECT DISTINCT alert_level FROM threat_intel ORDER BY alert_level",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "type": "query"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "PostgreSQL",
          "enable": true,
          "iconColor": "red",
          "name": "Critical Threats",
          "query": "SELECT timestamp as time, 'Critical Threat Detected' as title, CONCAT('Source: ', source, ', Score: ', threat_score) as text FROM threat_intel WHERE alert_level = 'critical' AND timestamp >= $__timeFrom() AND timestamp <= $__timeTo()"
        }
      ]
    }
  }
}